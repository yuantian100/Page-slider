<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<pageslider>
			<label>Page Slider</label>
			<sort_order>1</sort_order>
		</pageslider>
	</tabs>
	<sections>
		<pageslider>
			<label>This is Slider</label>
			<tab>pageslider</tab>
			<sort_order>1</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings>
					<label>General Setting</label>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						
						<slidereffect translate="label">
                            <label>Slider Effect</label>							
                            <frontend_type>select</frontend_type>
                            <source_model>pageslider/slidereffect</source_model>                          
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slidereffect>					
						
						<slidingtime translate="label">
                            <label>Sliding Time</label>	
							<comment><![CDATA[seconds between the end of the sliding effect and the start of the next one]]></comment>						
                            <frontend_type>text</frontend_type>                                                      
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slidingtime>
						
						<imagewidth translate="label">
                            <label>Image width</label>
							<comment><![CDATA[in pixels]]></comment>							
                            <frontend_type>text</frontend_type>                                                      
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </imagewidth>
						
			
					</fields>
				</settings>
			</groups>
		</pageslider>
	</sections>
</config>